<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="Characteristics Option Percentage Allocation"
        contentWidth="1000px"
        titleAlignment="Center"
    >
        <!-- <VBox class="sapUiSmallMargin"> -->
        <!-- <f:SimpleForm id="FormToolbar" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="3" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" ariaLabelledBy="Title1">
                <f:content> -->
        <Bar>
            <contentLeft>
                <!-- <VBox class="VBoxWidth"> -->
                <Label
                    text="Configurable Product"
                    required="true"
                    labelFor="PDFprodInput"
                    id="idProdLabel"
                />
                <MultiInput
                    width="250px"
                    id="PDFprodInput"
                    placeholder="Product"
                    showValueHelp="true"
                    valueHelpOnly="true"
                    valueHelpRequest="handleValueHelp1"
                    tokenUpdate="handleTokenUpdate"
                    enabled="true"
                />
                <!-- </VBox> -->
                <Label
                    text="Characteristic Name"
                    labelFor="idCharName"
                    id="idLabelText"
                />
                <MultiInput
                    id="idCharName"
                    value=""
                    width="400px"
                    valueHelpOnly="true"
                    placeholder="Characteristic Name"
                    showValueHelp="true"
                    valueHelpRequest="handleValueHelp"
                    class="inputClass"
                />
                <Label text="" />
                <!-- </VBox>         -->
            </contentLeft>
        </Bar>
        <VBox
            items="{path:'/setPanel'}"
            id="idVBox"
            visible="false"
        >
            <Panel
                id="_IDGenPanel1"
                expandable="true"
                expanded="false"
            >
                <headerToolbar>
			<OverflowToolbar>
            	<Title text="{CHAR_NAME}" />
            <ToolbarSpacer />
				<!-- <Button icon="sap-icon://delete" id="" press="onPanelDelete" /> -->
                <HBox visible="true" id="">
                <Label id="" text="Product:" ></Label>
                <Text text="{PRODUCT_ID}" id="" class="prodClass"/>
                </HBox>
			</OverflowToolbar>
		</headerToolbar>
                <content>
                    <Table
                        id=""
                        items="{path: 'child'}"
                        growingScrollToLoad="true"
                        growingThreshold="1000"
                        growing="true"
                        rememberSelections="false"
                        itemPress="onhandlePress"
                        mode="SingleSelectMaster"
                        selectionChange="onhandlePress"
                        sticky="ColumnHeaders"
                    >
                        <columns>
                            <Column
                                hAlign="Center"
                                vAlign="Middle"
                            >
                                <Text text="Characteristic Value" />
                            </Column>
                            <Column
                                hAlign="Center"
                                vAlign="Middle"
                            >
                                <Text text="Option Percentage" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <VBox>
                                        <Text text="{CHAR_VALUE} " />
                                        <Text text="{CHARVAL_DESC}" />
                                    </VBox>
                                    <Input
                                        value="{CHARVAL_INPUT}"
                                        enabled="true"
                                        liveChange="onOptEnter"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </Panel>
        </VBox>

        <!-- </f:content>
            </f:SimpleForm> -->
        <!-- </VBox> -->
        <buttons>
            <Button
                id="idSaveBtn"
                text="Save"
                press="onCharSave"
                enabled="false"
                type="Emphasized"
            />
            <Button
                id="idClosebtn"
                text="Cancel"
                type="Reject"
                press="onCharCanel"
                enabled="true"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
